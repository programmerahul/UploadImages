<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UPLOAD IMAGES</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <style>
      img {
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center display-4 my-4">UPLOAD IMAGES</h1>
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="input-group mb-3">
              <input
                type="file"
                name="file"
                id="file"
                class="input-group-input form-control"
              />
            </div>
            <div style="display:flex;justify-content: center;">
              <input
                type="submit"
                value="Submit"  
                class="btn btn-primary col-6"
              />
            </div>
          </form>
          <hr />
        </div>
      </div>
      <%if(files){%> <% files.reverse().forEach((file,index)=>{ %> 
        <%if(index%3==0) {%> 
            <div class="row">
        <% }%>
          <div class="col-md-6 m-auto ">
          <div  class="card card-body mb-3">
            <% if(file.isImage){%>
            <img  style="object-fit: contain; max-height:50vh;" src="image/<%= file.filename %>" alt="" />
            <% }else{%> <%= file.filename%> <% }%>
            <form
            style="display: flex;justify-content: center;"
              method="POST"
              action="/files/<%= file.filename%>?_method=DELETE"
            >
              <button class="btn btn-danger btn-block mt-4 col-6">Delete</button>
            </form>
          </div>
          </div>
          <%if(index%3===2) {%> 
            </div>
          <% }%>
          <%})%> <% }else {%>
          <p>No files to show</p>
          <% }%>
        
      </div>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
